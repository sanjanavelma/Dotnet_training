@model List<CURDOperations.Models.Product>

@{
    ViewData["Title"] = "Product CRUD";
}

<h2>Product CRUD (ADO.NET)</h2>

<form method="post">

    <div>
        <label>Id:</label>
        <input type="number" name="Id" placeholder="Enter Id (for Update/Delete)" />
    </div>

    <div>
        <label>Name:</label>
        <input type="text" name="Name" placeholder="Enter Name" />
    </div>

    <div>
        <label>Price:</label>
        <input type="number" name="Price" placeholder="Enter Price" />
    </div>

    <br />

    <!-- 4 CRUD BUTTONS -->
    <button type="submit" formaction="/Product/Create">Create</button>
    <button type="submit" formaction="/Product/Index">Read</button>
    <button type="submit" formaction="/Product/Update">Update</button>
    <button type="submit" formaction="/Product/DeleteById"
            onclick="return confirm('Are you sure you want to delete this record?');">
        Delete
    </button>

</form>

<hr />

<h3>Product List</h3>

<table border="1" cellpadding="10">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
        </tr>
    </thead>

    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">No Records Found</td>
            </tr>
        }
    </tbody>
</table>